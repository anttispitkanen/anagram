$("#like_<%= @post.id %>").removeClass('glyphicon-heart');
$("#like_<%= @post.id %>").html("<%= escape_javascript(link_to '', like_post_path(@post.id), remote: true, id: 'like_#{@post.id}', class: 'like glyphicon glyphicon-heart-empty') %>");
$("#likes_<%= @post.id %>").html("<%= j (render partial: 'posts/likes', locals: { post: @post } ) %>");
